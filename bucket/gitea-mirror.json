{
    "version": "3.9.4",
    "description": "Mirror GitHub repositories to self-hosted Gitea instance",
    "homepage": "https://github.com/RayLabsHQ/gitea-mirror",
    "license": "GPL-3.0-only",
    "notes": [
        "Run 'gitea-mirror' to start the server.",
        "First user signup becomes admin. Configure via web UI."
    ],
    "suggest": {
        "bun": "bun"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/RayLabsHQ/gitea-mirror/archive/refs/tags/v3.9.4.zip",
            "hash": "1dbfc37bd61e5fecc491b2e3e1d9d91527c167b70bd7a6e271612163426d232c",
            "extract_dir": "gitea-mirror-3.9.4"
        }
    },
    "persist": [
        "data",
        "node_modules",
        ".env",
        ".runtime"
    ],
    "installer": {
        "script": [
            "$src = Join-Path $bucketsdir 'gdm257' 'scripts' 'gitea-mirror'",
            "Copy-Item \"$src\\*\" $dir -Recurse",
            "& \"$dir\\install.ps1\" -dir $dir -persist_dir $persist_dir"
        ]
    },
    "bin": [
        [
            "run.ps1",
            "gitea-mirror"
        ]
    ],
    "checkver": {
        "github": "https://github.com/RayLabsHQ/gitea-mirror",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/RayLabsHQ/gitea-mirror/archive/refs/tags/v$version.zip",
                "extract_dir": "gitea-mirror-$version"
            }
        }
    }
}
